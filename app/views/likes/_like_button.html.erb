 <% if current_user.best_answers?(answer) %>
  <%= form_with(model: current_user.likes.find_by(answer_id: answer.id), remote: true, method: :delete) do |f| %>
    <%= hidden_field_tag :answer_id, answer.id %>
    <%= f.submit 'ベストアンサー解除', class: 'btn btn-danger d-inline' %>
  <% end %>
<% else %>
  <%= form_with(model: current_user.likes.build, remote: true) do |f| %>
    <%= hidden_field_tag :answer_id, answer.id %>
    <%= f.submit 'ベストアンサー', class: 'btn btn-primary d-inline' %>
  <% end %>
 <% end %>


